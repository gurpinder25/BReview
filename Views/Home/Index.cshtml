@{
    ViewData["Title"] = "Home Page";
}

<form method="get" action="/Home/Result" runat="server" border="0" cellpadding="0" cellspacing="0" style="width:100%;float:right">
    <div class="input-group">
        <input type="text" name="title" class="form-control" placeholder="Book Title" />
        <input type="submit" value="Search" style="background:white" />
    </div>
    <br />
</form>

<br />
<h3>CRUD Opreations</h3>
<hr />

<h5>CREATE</h5>
<form action="/Home/Create" method="post">
    <input type="text" name="title" placeholder="Title">
    <input type="text" name="author" placeholder="Author">
    <input type="submit" value="GO"><br />
</form>

<br />
<h5>READ</h5>
<form action="/Home/Read" method="get">
    <input type="submit" value="READ"><br />
</form>

<br />

<br />

<h5>UPDATE</h5>
<form action="/Home/Update" method="post">
    <input type="text" name="title" placeholder="Title">
    <input type="text" name="author" placeholder="Author">
    <input type="submit" value="GO"><br />
</form>

<br />



<h5>DELETE</h5>
<form action="/Home/Delete" method="post">
    <input type="text" name="title" placeholder="Title">
    <input type="submit" style="background:red" value="GO"><br />
</form>

<br />

<style>
    body {
        background-color: #EBFFD1;
    }
</style>